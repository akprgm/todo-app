pipeline {
  agent {
    docker {
      image 'node' 
      args '-p 3000:3000' 
    }
  }
  stages {
    stage('Build') { 
      steps {
        sh 'npm install'
        sh 'npm run build'
      }
    }
    stage('Test') {
      steps {
        sh 'npm test -- --watchAll=false'
      }
    }
    stage('Deploy') {
      steps {
        sh 'ssh -i ~/.ssh/key.pem ubuntu@52.89.211.197 
            cd todo-app
            sudo git pull origin master
            sudo npm install
            sudo npm run build
            sudo rm -rf /var/www/html/static
            sudo mv build/* /var/www/html'
      }
    }
  }
}
