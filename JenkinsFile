pipeline {
  agent {
    docker {
      image 'node' 
      args '-p 3000:3000' 
    }
  }
  stages {
    stage('Build') { 
      steps {
        sh 'npm install'
        sh 'npm run build'
      }
    }
    stage('Test') {
      steps {
        sh 'npm test -- --watchAll=false'
      }
    }
    stage('Deploy') {
      steps {
        sh './jenkins/deploy.sh'
      }
    }
  }
}
